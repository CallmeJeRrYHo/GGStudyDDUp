<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="popup_drop_down">
        <item name="android:windowEnterAnimation">@anim/pupup_drop_down_in</item>
    </style>

    <style name="popup_drop_right">
        <item name="android:windowEnterAnimation">@anim/popup_drop_right</item>
        <item name="android:windowExitAnimation">@anim/popup_drop_right_out</item>
    </style>

</resources>
